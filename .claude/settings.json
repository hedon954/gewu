{
  "permissions": {
    "defaultMode": "plan",
    "allow": [
      "Read(*.rs)",
      "Read(Cargo.toml)",
      "Read(Cargo.lock)",
      "Read(Makefile)",
      "Read(README.md)",
      "Read(constitution.md)",
      "Read(specs/**)",
      "Grep",
      "Glob",
      "LS",
      "Bash(rustc:--version)",
      "Bash(cargo:check:*)",
      "Bash(cargo:build:*)",
      "Bash(cargo:test:*)",
      "Bash(cargo:fmt:*)",
      "Bash(cargo:clippy:*)"
    ],
    "ask": [
      "Write",
      "Edit",
      "MultiEdit",
      "Bash(cargo:add:*)",
      "Bash(cargo:update)",
      "Bash(git:add:*)",
      "Bash(git:commit:*)"
    ],
    "deny": [
      "Read(./.env*)",
      "Read(*.pem)",
      "Read(*.key)",
      "Bash(rm:*)",
      "Bash(git:push:*)",
      "WebFetch"
    ]
  }
}
